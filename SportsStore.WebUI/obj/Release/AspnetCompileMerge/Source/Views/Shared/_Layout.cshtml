@{
    Layout = null;
 }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <title>@ViewBag.Title</title>

    <style>
        .navbar-right {
            float: right !important;
            margin-right: 15px;
            margin-left: 15px;
        }
    </style>
</head>
<body>
    <!--Navigation-->
    @Html.Partial("_NavBarMain")
    <br>
    <div class="container">
        <div class="panel">
            <!--Carousel-->
            @Html.Partial("_CarouselMain")

            <div class="panel panel-body">
                <!--Menu Navigation-->
                <div class="row">
                    <div class="container-fluid visible-xs col-xs-12">
                        @Html.Action("Menu", "Nav", new { horizontalLayout = true })
                    </div>
                </div>
                <!--List of products here-->
                <div class="row">
                    <div class="col-xs-12 col-sm-12">
                        <br class="hidden-xs">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Footer-->
    @Html.Partial("_FooterMain")
    <br>

    <!--Second Footer-->
    <footer class="container">
        <div class="row container-fluid">
            <div class="panel">
                <div class="panel-body text-right">
                    <p>©2016 Powered by mofosda™. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </footer>


</body>
</html>