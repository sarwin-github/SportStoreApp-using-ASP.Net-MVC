@model IEnumerable<SportsStore.Domain.Entities.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel" style="padding-top:30px;">
    <div class="panel-body">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1 class="panel-title">All Products</h1>
            </div>

            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <tr>
                        <th class="text-right">ID</th>
                        <th>Name</th>
                        <th class="text-right">Price</th>
                        <th class="text-center">Actions</th>
                    </tr>

                    @foreach (var items in Model)
                    {
                        <tr>
                            <td class="text-right">@items.ProductID</td>
                            <td>@Html.ActionLink(items.Name, "Edit", new { items.ProductID })</td>
                            <td class="text-right">@items.Price.ToString("c")</td>
                            <td class="text-center">
                                @using (Html.BeginForm("Delete", "Admin"))
                                {
                                    @Html.Hidden("ProductID", items.ProductID)
                                    <input type="submit" class="btn btn-default btn-xs" value="Delete">
                                }
                            </td>
                        </tr>
                    }

                </table>
            </div>

            <div class="panel-footer text-right">
                @Html.ActionLink("Add a new product", "Create", null, new { @class = "btn btn-primary" })
            </div>

        </div>
    </div>
</div>


